{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server: Run",
            "type": "shell",
            "command": "air -c air.toml",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Server: Deploy",
            "type": "shell",
            "command": "pulumi up",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/deploy"
            }
        },
        {
            "label": "Pulumi: Update",
            "type": "shell",
            "command": "curl -sSL https://get.pulumi.com | sh"
        },
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "schemas",
            "description": "list of schemas to update (leave blank for all schemas)"
        },
        {
            "type": "pickString",
            "id": "environment",
            "description": "choose envrionment",
            "options": [
                "production",
                "development"
            ],
            "default": "development"
        }
    ]
}
